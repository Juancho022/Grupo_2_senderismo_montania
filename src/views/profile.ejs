<% let pageTitle='Perfil de usuario' %>
    <%- include('partials/head', { pageTitle: pageTitle }) %>

        <%- include('partials/head', { pageTitle: 'Perfil de usuario' , styles:['profile'] }) %>

            <body>
                <%- include('./partials/header') %>
                    <main class="main">
                        <div class="profile-wrapper">
                            <div class="profile-container">
                                <div class="profile-details">
                                    <div class=""></div><img src="/images/avatars/<%= locals.user?.img %>" alt="Imagen de Perfil">
                                <h4>Tus datos</h4>
                                <p>Modifica tus datos personales a continuación para que tu cuenta esté
                                    actualizada</p>
                             
                                    <p><strong>Nombre:</strong>
                                        <%= user.first_name %>
                                            <%= user.last_name %>
                                    </p>
                                    <p><strong>Email:</strong>
                                        <%= user.email %>
                                    </p>
                                    <p><strong>Fecha de Nacimiento:</strong>
                                        <%= user.birthdate %>
                                    </p>
                                    <p><strong>Número de Documento:</strong>
                                        <%= user.document_number %>
                                    </p>
                                    <p><strong>Teléfono:</strong>
                                        <%= user.phone %>
                                    </p>
                                    <p><strong>Dirección:</strong>
                                        <%= user.address %>
                                    </p>
                                </div>
                                <div class="button-edit">
                                    <a href="/user/<%= user.id %>/edit">
                                        <button>Editar información</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </main>
                    <%- include('./partials/footer') %>
            </body>

            </html>