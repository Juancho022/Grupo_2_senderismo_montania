<% let pageTitle='Product create form' %>
    <%- include('partials/head', { styles: ['stylesInventory'], pageTitle: pageTitle }) %>

        <body>
            <%- include('./partials/header') %>
                <main class="form-edit-create">
                    <div class="product-edit">
                        <form class="product-edit-form" action="/inventory/create" method="post"
                            enctype="multipart/form-data">

                            <h2 id="edit-product-title">Crear producto</h2>
                            <div class="label-product">
                                <label for="name">Producto</label>
                                <input type="text" class="product-imput" name="name" id="name"
                                    placeholder="Nombre del producto" value="<%= (locals.oldData && locals.oldData.name) ? locals.oldData.name : '' %>"
                                    <% if (locals.errors && locals.errors.name) { %>
                                        <span class="error"><%= locals.errors.name.msg %></span>
                                    <% } %>
                                required>
                            </div>

                            <div class="edit-img">
                                <input type="file" id="image" accept=".jpg, .jpeg, .png, .gif" class="product-imput" name="image">
                            </div>

                            <div class="label-product">
                                <label for="description">Descripción</label>
                                <input type="text" class="product-imput" name="description"
                                    placeholder="Descripción del producto" value="<%= (locals.oldData && locals.oldData.description) ? locals.oldData.description : '' %>"
                                    <% if (locals.errors && locals.errors.description) { %>
                                        <span class="error"><%= locals.errors.description.msg %></span>
                                    <% } %>
                                required>
                            </div>

                            <div class="label-product-price">
                                <label for="price">Precio</label>
                                <input type="text" class="product-imput-price" name="price" id="price"
                                    placeholder="Precio del producto" value="<%= (locals.oldData && locals.oldData.price) ? locals.oldData.price : '' %>"
                                    <% if (locals.errors && locals.errors.price) { %>
                                        <span class="error"><%= locals.errors.price.msg %></span>
                                    <% } %>
                                required>
                            </div>

                            <div class="label-product-price">
                                <label for="discount">Descuento</label>
                                <input type="text" id="discount" name="discount" placeholder="Ej: 15"
                                 value="<%= (locals.oldData && locals.oldData.discount) ? locals.oldData.discount : '' %>"
                                    class="product-imput-price">
                            </div>

                            <div class="size-options">
                                <label for="size">Talles disponibles</label>
                                <label>
                                    <input type="checkbox" name="sizes" value="XL" id="sizes"> XL
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" value="L" id="sizes"> L
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" value="M" id="sizes"> M
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" value="S" id="sizes"> S
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" value="XS" id="sizes"> XS
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" value="XS" id="sizes"> UNICO
                                </label>
                            </div>

                            <div class="color-options">
                                <label for="color-options">Colores disponibles</label>
                                <label>
                                    <input type="checkbox" name="colors" value="white" id="colors"> Blanca
                                </label>
                                <label>
                                    <input type="checkbox" name="colors" value="yellow" id="colors"> Amarilla
                                </label>
                                <label>
                                    <input type="checkbox" name="colors" value="black" id="colors"> Negra
                                </label>
                            </div>

                            <div class="counter-edit-product">
                                <span id="stock">Stock</span>
                                <div class="button" id="decrease">-</div>
                                <span id="count">24</span>
                                <div class="button" id="increase">+</div>
                            </div>

                            <div class="product-category">
                                <span id="category">Categoría</span>
                                <select name="category" id="category" class="product-category-detail">
                                    <option value="climbing" <%= (locals.oldData && oldData.category === 'climbing') && 'selected' %>>Escalada</option>
                                    <option value="accessories" <%= (locals.oldData && oldData.category === 'accessories') && 'selected' %>>Accesorios</option>
                                    <option value="hiking" <%= (locals.oldData && oldData.category === 'hiking') && 'selected' %>>Senderismo</option>
                                    <option value="footwear" <%= (locals.oldData && oldData.category === 'footwear') && 'selected' %>>Calzados</option> 
                                </select>
                            </div>
                            <div class="button-submit">
                                <input type="submit" class="button-submit" value="Añadir producto">
                            </div>
                        </form>
                    </div>
                </main>
                <%- include('./partials/footer') %>
        </body>

        </html>