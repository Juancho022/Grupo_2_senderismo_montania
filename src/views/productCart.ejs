<body>
    <header>
        <div class="logo">
            <img src="/images/peaklogo.png" alt="Peak's logo">
        </div>
        <div class="right-elements">
            <div class="search">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
            <div class="burguer-menu">
                <a class="burguer"><i class="fa-solid fa-bars"></i></a>
            </div>
        </div>

        <nav class="center-bar">
            <ul class="nav-bar">
                <li><a href="/">INICIO</a></li>
                <li><a href="#">PRODUCTOS</a></li>
                <li><a href="#">OUTLET</a></li>
                <li><a href="#">DEPORTES</a></li>
                <li><a href="#">CONTACTO</a></li>
            </ul>
        </nav>
        <nav class="right-bar">
            <div class="icon"><a href="#"><i class="fa-solid fa-magnifying-glass"></i></a></div>
            <div class="icon"><a href="#"><i class="fa-solid fa-user"></i></a></div>
            <div class="icon"><a href="#"><i class="fa-solid fa-cart-shopping"></i></a></div>
        </nav>

    </header>
    <main>
    <h5>Productos > Carrito de compras</h5>
    <section class="product-list">
        <article class="products">
            <img src="\images\mochila1.png" alt="Mochila Peak">
            <div class="description">
                <p>
                    MOCHILA PEAK
                </p>
                <div class="color-elements">
                    <span class="color-text">
                        Sea green
                    </span>
                    <div class="color">
                    </div>
                </div>
                <button>
                    Modificar
                </button>
            </div>
            <div class="product-quantity">
                <p>
                    Cantidad
                </p>
                <div>
                    <div class="less">
                        <p>
                            -
                        </p>
                    </div>
                    <div>
                        <p class="quantity">
                            1
                        </p>
                    </div>
                    <div>
                        <p class="more">
                            +
                        </p>
                    </div>
                </div>
            </div>
            <div class="cost-delete">
                <p>
                    $150.000
                </p>
                <i class="fa fa-trash"></i>
            </div>
        </article>
    </section>

    <section class="product-list">
        <article class="products">
            <img src="\images\remera-térmica.png" alt="Remera Térmica">
            <div class="description">
                <p>
                    REMERA TÉRMICA
                </p>
                <div class="color-elements">
                    <span class="color-text">
                        Talle L
                    </span>
                </div>
                <button>
                    Modificar
                </button>
            </div>
            <div class="product-quantity">
                <p>
                    Cantidad
                </p>
                <div>
                    <div class="less">
                        <p>
                            -
                        </p>
                    </div>
                    <div>
                        <p class="quantity">
                            1
                        </p>
                    </div>
                    <div>
                        <p class="more">
                            +
                        </p>
                    </div>
                </div>
            </div>
            <div class="cost-delete">
                <p>
                    $87.000
                </p>
                <i class="fa fa-trash"></i>
            </div>
        </article>
    </section>

    <section class="product-detail">
        <article class="discount-product">
            <div class="discount">

                <div class="discount-code">
                    <p>
                        ¿Tenés un código de descuento?
                    </p>


                    <div class="apply-code">

                        <form action="#" method="POST">
                            <input class="input" type="text" name="code">
                        </form>

                        <button>
                            Aplicar
                        </button>
                    </div>
                </div>
            </div>
        </article>

        <article class="invoice-item">
            <div class="billing">
                <div class="products">
                    <p> 2 productos</p>

                <div class="price">
                    <p>$237.000</p>
                </div>
                </div>
                <div class="invoice-detail">
                    <div class="shipment">
                        <p>
                            Envío
                        </p>
                    </div>
                    <div class="shipping-type">
                        <p>
                            Gratis
                        </p>
                    </div>
                </div>
                <div class="total">
                    <div>
                        <p>
                            TOTAL
                        </p>
                    </div>
                    <div class="total-price">
                        <p>
                            $237.000
                        </p>
                    </div>
                </div>
                <button>
                    IR A PAGAR
                </button>
            </div>
        </article>
    </section>
    </main>
    <footer>
        <div class="form-suscription">
        <form action="#" method="POST">
            <p>Suscribite para recibir las mejores ofertas</p>
            <input type="email" name="email" placeholder="Correo electrónico">
            <button type="submit">Suscribirme</button>
        </form>
        </div>
        
    </div>
    <div class="copyright">
        <p><u>Términos y condiciones</u> - <u>Créditos</u> - PEAK. - © 2023. Todos los derechos reservados.</p>
    </div>
    <div class="social-media-icons">
        <a href="#"><i class="fa-brands fa-facebook"></i></a>
        <a href="#"><i class="fa-brands fa-instagram"></i></a>
        <a href="#"><i class="fa-brands fa-youtube"></i></a>
    </div>

</footer>
</body>

</html>