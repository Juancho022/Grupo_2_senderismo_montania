<header>
    <div class="logo">
        <a href="/"><img src="/images/peaklogo.png" alt="Peak's logo"></a>
    </div>
    <div class="right-elements">
        <div class="search">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        <div class="burguer-menu">
            <a class="burguer"><i class="fa-solid fa-bars"></i></a>
        </div>
    </div>
    <nav class="center-bar">
        <ul class="nav-bar">
            <li><a href="/">INICIO</a></li>
            <li><a href="/products">PRODUCTOS</a></li>
            <li><a href="/help">PREGUNTAS FRECUENTES</a></li>
            <li><a href="/aboutus">QUIÉNES SOMOS</a></li>
        </ul>
    </nav>

    <nav class="right-bar">
        <% if (locals.user) { %>
            <h2 id="userLog">¡Hola <%= locals.user?.first_name %>!</h2>
            <% } %> 
            
            <div class="icon-container" onmouseenter="showPopup()" onmouseleave="hidePopup()">
                <div class="icon">
                    <i class="fa-solid fa-user"></i>
                </div>

                <div class="popup" onmouseenter="showPopup()" onmouseleave="hidePopup()">
                    <% if (locals.user) { %>
                    <div class="headercollapsable" id="logout">
                        <button class="headercollapsable">
                            <a href="/user/logout">Cerrar Sesión</a>
                        </button>
                    </div>
                    <% } else { %>
                    <div class="headercollapsable" id="login">
                        <button class="headercollapsable">
                            <a href="/user/login">Iniciar sesión</a>
                        </button>
                    </div>

                    <div class="headercollapsable" id="register">
                        <button class="headercollapsable">
                            <a href="/user/register">Crear cuenta</a>
                        </button>
                    </div>

                    <% } %>    


                </div>
            </div>

                <div class="icon"><a href="#"><i class="fa-solid fa-magnifying-glass"></i></a></div>
                <div class="icon"><a href="/products/productCart"><i class="fa-solid fa-cart-shopping"></i></a></div>
    </nav>

</header>