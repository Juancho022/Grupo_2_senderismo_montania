<% let pageTitle='Product edit form' %>
    <%- include('partials/head', { styles: ['stylesInventory'], pageTitle: pageTitle }) %>

        <body>
            <%- include('./partials/header') %>
                <main>
                    <form class="product-edit-form" action="/inventory/<%= productToEdit.id %>/edit?_method=PUT" method="post">
                        <h2 id="edit-product-title">Editar producto</h2>
                        <div class="product-edit">
                            <div class="edit-img">
                                <img class="img-edit-product" src="/images/<%= productToEdit.image %>">
                                <button class="edit-image-button">
                                    Editar imágenes
                                </button>
                            </div>
                            <div class="label-product">
                                <label for="product">Producto</label>
                                <input type="text" class="product-imput" name="name" id="name"
                                    placeholder="Nombre del producto" required value="<%= productToEdit.name %>">
                            </div>

                            <div class="label-product">
                                <label for="description">Descripción</label>
                                <textarea type="text" class="product-imput" name="description" id="description">
                                    <%= productToEdit.description %></textarea>
                            </div>

                            <div class="label-product-price">
                                <label for="price">Precio</label>
                                <input type="text" class="product-imput-price" name="price" id="price"
                                    placeholder="Precio del producto" required value="<%= productToEdit.price %>">
                            </div>

                            <div class="discount">
                                <label for="discount">Descuento</label>
                                <input type="text" id="discount" name="discount" placeholder="Ej: 15" class="product-imput-price"
                                value="<%= productToEdit.discount %>">
                            </div>

                            <div class="size-options">
                                <label for="size">Talles disponibles</label>
                                <label>
                                    <input type="checkbox" name="sizes" id="sizes" value="<%= productToEdit.sizes === 'XL' && checked ? productToEdit.sizes %>"> XL
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" id="sizes" value="<%= productToEdit.sizes === 'L' && checked ? productToEdit.sizes %>"> L
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" id="sizes" value="<%= productToEdit.sizes === 'XL' && checked ? productToEdit.sizes %>"> M
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" id="sizes" value="<%= productToEdit.sizes === "XL" && checked ? productToEdit.sizes %>""> S
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" id="sizes" value="<%= productToEdit.sizes === 'XS' && 'checked' %>"> XS
                                </label>
                                <label>
                                    <input type="checkbox" name="sizes" id="sizes" value="<%= productToEdit.sizes === 'UNICO' && 'checked' %>"> UNICO
                                </label>
                            </div>

                            <div class="color-options">
                                <label for="color-options">Colores disponibles</label>
                                <label>
                                    <input type="checkbox" name="colors" id="colors" value="<%= productToEdit.sizes === 'Blanca' && 'checked' %>"> Blanca
                                </label>
                                <label>
                                    <input type="checkbox" name="colors" id="colors" value="<%= productToEdit.sizes === 'Amarilla' && 'checked' %>"> Amarilla
                                </label>
                                <label>
                                    <input type="checkbox" name="colors" id="colors" value="<%= productToEdit.sizes === 'Negra' && 'checked' %>"> Negra
                                </label>
                            </div>

                            <div class="counter-edit-product">
                                <span id="stock">Stock</span>
                                <div class="button" id="decrease">-</div>
                                <span id="count">24</span>
                                <div class="button" id="increase">+</div>
                            </div>

                            <div class="product-category">
                                <span id="category">Categoría</span>
                                <select class="product-category-detail" id="category">
                                    <option value="<%= productToEdit.category %>">Escalada</option>
                                    <option value="<%= productToEdit.category %>">Accesorios</option>
                                    <option value="<%= productToEdit.category %>">Senderismo</option>
                                    <option value="<%= productToEdit.category %>">Trekking</option>
                                    <option value="<%= productToEdit.category %>">Calzados</option>
                                </select>
                            </div>
                            <div class="button-submit">
                                <input type="submit" class="button-submit" value="Guardar cambios">
                            </div>
                            <div class="button-delete">
                                <input type="submit" class="button-delete" value="Borrar producto">
                            </div>
                    </form>
                    </div>
                </main>
                <%- include('./partials/footer') %>
        </body>

        </html>