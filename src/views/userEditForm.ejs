<% let pageTitle='User edit form' %>
    <%- include('partials/head', { styles: ['userToEditForm'], pageTitle: pageTitle }) %>

        <body>

            <%- include('./partials/header') %>

                <main>
                    <div class="form-container">
                        <form method="POST" action="/user/<%= user.id %>/edit?_method=PUT">
                            <div class="form-group">
                                <label>Nombre</label>
                                <input type="text" name="firstName" value="<%= user.first_name %>">
                            </div>

                            <div class="form-group">
                                <label>Apellido</label>
                                <input type="text" name="lastName" value="<%= user.last_name %>">
                            </div>

                            <div class="form-group">
                                <label>Correo Electrónico</label>
                                <input type="email" name="email" value="<%= user.email %>">
                            </div>
                            <div class="form-group">
                                <label for="birthdate">Fecha de Nacimiento:</label>
                                <input type="date" id="birthdate" name="birthdate" value="<%= user.birthdate %>">
                            </div>
                            <div class="form-group">
                                <label for="address">Dirección:</label>
                                <input type="text" id="address" name="adress" value="<%= user.address %>">
                            </div>
                            <div class="form-group">
                                <label for="role">Rol:</label>
                                <select id="role" name="role">
                                    <% roles.forEach(role=> { %>
                                        <option value="<%= role.id %>" <% if (role.id===user.roles_id) { %>
                                            selected
                                            <% } %>><%= role.description %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>

                            <button type="submit">Guardar cambios</button>
                        </form>
                    </div>
                </main>

                <%- include('./partials/footer') %>

        </body>